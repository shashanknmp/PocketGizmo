<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txvMMYheader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/textHeaderRed"
        android:gravity="center_horizontal|center_vertical"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txvMMYdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:text="Date:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtMMYdate"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:layout_margin="3dip"
                android:gravity="center_vertical|center_horizontal"
                android:inputType="none"
                android:textColor="@color/edittext"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace" >
            </EditText>

            <TextView
                android:id="@+id/txvMMYtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:text="Time:"
                android:textSize="20sp" >
            </TextView>

            <EditText
                android:id="@+id/edtMMYtime"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:layout_margin="3dip"
                android:gravity="center_vertical|center_horizontal"
                android:inputType="none"
                android:textColor="@color/edittext"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace" >
            </EditText>

            <TextView
                android:id="@+id/txvMMYpaymentmode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:text="Payment Mode:"
                android:textSize="20sp" >
            </TextView>

            <Spinner
                android:id="@+id/spnMMYpaymentmode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dip"
                android:textColor="@color/edittext"
                android:textSize="20sp" >
            </Spinner>

            <TextView
                android:id="@+id/txvMMYdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:text="Description:"
                android:textSize="20sp" >
            </TextView>

            <EditText
                android:id="@+id/edtMMYdescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dip"
                android:capitalize="sentences"
                android:textColor="@color/edittext"
                android:textSize="20sp" >
            </EditText>

            <TextView
                android:id="@+id/txvMMYamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:text="Amount(Rs):"
                android:textSize="20sp" >
            </TextView>

            <EditText
                android:id="@+id/edtMMYamount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dip"
                android:inputType="numberDecimal"
                android:textColor="@color/edittext"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace" >
            </EditText>
        </LinearLayout>
    </ScrollView>

